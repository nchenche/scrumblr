<div class="board-outline">
    <div id="board">
        <div id="board-doodles" class="-z-10"></div>

        <div class="flex flex-col items-center font-customFont">
            <h1 class="font-customFont text-5xl text-center mb-1 text-gray-400 mb-6">Forgot your password?</h1>
        
            <div class="w-full max-w-md text-2xl">

                <div class="flex items-center justify-center mt-1 mb-20 text-sm text-center">
                    You will receive an email with a link to reset your password.                     
                </div>               

                <div class="flex items-center mb-10">
                    <label for="username" class="text-gray-800 w-1/3">Username</label>
                    <div class="flex-1 flex flex-col">
                        <input id="username" type="username" name="username" autocomplete="off" class="p-0 focus:outline-none text-gray-600 border-b-2 border-dashed border-gray-500 bg-inherit">
                        <span id="username-error" class="h-2 error-message text-sm text-red-700 mt-1 opacity-90"></span>
                    </div>
                </div>                          
                
                <div class="flex justify-end">
                    <button disabled id="btn-submit" class="text-gray-500 text-3xl font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline opacity-50 cursor-not-allowed">
                        Send Link
                    </button>
                </div>


                <div id="loader" class="hidden flex items-center justify-center mt-8">
                    <div
                      class="inline-block h-6 w-6 animate-spin rounded-full border-4 border-solid border-current border-e-transparent align-[-0.125em] text-gray-500 motion-reduce:animate-[spin_1.5s_linear_infinite]"
                      role="status">
                    </div>
                </div>

                <div id="mail-destination" class="flex flex-col items-center justify-center mt-1 mt-8 text-large text-center text-green-600">
                </div>

            </div>
            
        </div>

    </div>
</div>
