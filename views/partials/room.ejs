<div class="main-container flex space-x-1 w-full h-full">

  <!-- ml-2  border-4 border-zinc-300 shadow-lg rounded-lg -->
  <div class="p-2 clients-container w-64 max-h-[80vh] font-customFont overflow-hidden rder-2 border-gray-600 text-center">

    <div class="text-md h-full flex flex-col">
      <h2>Connected users</h2>

      <!-- Placeholder for dynamically generated user list -->
      <div class="flex-grow mt-2 overflow-y-auto mx-auto w-[10rem]" style="height: calc(100% - 1rem);" id="userListContainer"></div>
    </div>

  </div>

  <div class="w-8/12 relative">

    <div class="board-outline" style="height: fit-content; right: 0%;">
      <div id="board" style="min-height: 40vh;">

        <table id="board-table" class="board-table">
          <tr>
            <td id="icon-col" width="1%">
              <img id="add-col" class="col-icon" width="20" height="20"
                src="/images/icons/iconic/raster/black/plus_alt_32x32.png" />
              <img id="delete-col" class="col-icon" width="20" height="20"
                src="/images/icons/iconic/raster/black/minus_alt_32x32.png" />
            </td>
          </tr>
        </table>
      </div>
    </div>

    <!-- Buttons on the right -->
    <div class="fixed top-4 right-4 z-10 p-2.5 bg-white rounded opacity-50 flex flex-col items-center space-y-2">
      <i id="create-card" class="fa fa-plus-circle fa-2x bottom-icon cursor-pointer hover:opacity-100"
        title="Create card"></i>
      <!-- <i id="smallify" class="fa fa-expand fa-2x bottom-icon cursor-pointer hover:opacity-100"></i> -->
      <i id="fontify" class="fa fa-font fa-2x bottom-icon cursor-pointer hover:opacity-100"
        title="Change font family"></i>
      <i id="font-increase" class="fa fa-search-plus fa-2x bottom-icon cursor-pointer hover:opacity-100"
        title="Increase font size"></i>
      <i id="font-decrease" class="fa fa-search-minus fa-2x bottom-icon cursor-pointer hover:opacity-100"
        title="Decrease font size"></i>
      <% if (is_owner) { %>
        <% if (is_room_protected) { %>
          <i id="protect-room" class="fa fa-unlock fa-2x bottom-icon cursor-pointer hover:opacity-100"
            title="Unlock room"></i>
          <% } else { %>
            <i id="protect-room" class="fa fa-lock fa-2x bottom-icon cursor-pointer hover:opacity-100"
              title="Lock room"></i>
            <% } %>
              <% } %>
        <i id="font-increase" class="fa fa-paint-brush fa-2x bottom-icon cursor-pointer hover:opacity-100"
        title="Increase font size"></i>        
    </div>

