<div class="board-outline">
    <div id="board">
        <div id="board-doodles" class="-z-10"></div>

        <div class="flex flex-col items-center font-customFont">
            <h1 class="font-customFont text-5xl text-center mb-1 text-gray-400 mb-6">Welcome to Scrumblr</h1>
        
            <div class="w-full max-w-md text-2xl">

                <div class="flex items-center mb-10">
                    <label for="board" class="text-gray-800 w-1/3">Board name</label>
                    <div class="flex-1 flex flex-col">
                        <input id="board-input" type="board" name="board" autocomplete="off" class="p-0 focus:outline-none text-gray-600 border-b-2 border-dashed border-gray-500 bg-inherit">
                        <span id="board-error" class="error-message text-sm text-red-700 mt-1 opacity-0">Board already exists</span>
                    </div>
                </div>
                
                <div class="flex justify-end">
                    <button id="btn-submit" class="text-gray-500 text-3xl font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline opacity-50 cursor-not-allowed">
                        Join
                    </button>
                </div>                
            </div>
          
        </div>

    </div>
</div>

