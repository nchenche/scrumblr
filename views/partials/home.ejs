<div class="board-outline" style="height: fit-content;">
    <div id="board" style="min-height: 50vh;">

        <div class="text-center mb-24 h-24">
            <h1 class="font-customFont text-5xl text-gray-400">Create or Join a Room</h1>
        </div>

        <div class="flex flex-col items-center justify-center font-customFont">
        
            <div class="w-full max-w-md text-2xl">
                <div class="flex items-center mb-10">
                    <label for="board" class="text-gray-800 w-1/3">Board name</label>
                    <div class="flex-1 flex flex-col">
                        <input id="board-input" type="text" name="board" autofocus autocomplete="off" class="p-0 focus:outline-none text-gray-600 border-b-2 border-dashed border-gray-500 bg-inherit">
                        <span id="board-error" class="error-message text-sm text-red-700 mt-1 opacity-0">Board already exists</span>
                    </div>
                </div>
                
                <div class="flex justify-end">
                    <button id="btn-submit" class="text-white bg-blue-500 hover:bg-blue-700 text-2xl font-bold py-2 px-4 rounded-xl opacity-90 focus:outline-none focus:shadow-outline disabled:opacity-50 disabled:cursor-not-allowed" disabled>
                        Join Room
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
