<div class="board-outline">
    <div id="board">
        <div id="board-doodles" class="-z-10"></div>

        <div class="flex flex-col items-center font-customFont">
            <h1 class="font-customFont text-5xl text-center mb-1 text-gray-400 mb-32">Reset your password?</h1>
        
            <div class="w-full max-w-md text-2xl">         

                <div class="flex items-center mb-10">
                    <label for="password" class="text-gray-800 w-1/3">New password</label>
                    <div class="flex-1 flex flex-col">
                        <input id="token" type="hidden" name="token" value="<%= token %>">
                        <input id="username" type="hidden" name="username" value="<%= username %>">
                
                        <input id="password" type="password" name="password" value='' autocomplete="off" class="p-0 focus:outline-none text-gray-600 border-b-2 border-dashed border-gray-500 bg-inherit">
                        <span id="password-error" class="h-2 error-message text-sm text-red-700 mt-1 opacity-90"></span>
                    </div>
                </div>                          
                
                <div class="flex justify-end">
                    <button disabled id="btn-submit" class="text-gray-500 text-3xl font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline opacity-50 cursor-not-allowed">
                        Submit
                    </button>
                </div>                
            </div>
            
        </div>

    </div>
</div>
